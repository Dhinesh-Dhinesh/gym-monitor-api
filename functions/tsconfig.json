{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true, // Enable esModuleInterop
    "allowSyntheticDefaultImports": true // Allow synthetic default imports
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}